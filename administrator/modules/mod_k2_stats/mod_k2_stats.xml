<?xml version="1.0" encoding="utf-8"?>
<install type="module" client="administrator" method="upgrade" version="1.5" position="icon">
    <name>K2 Stats (admin)</name>
    <author>JoomlaWorks</author>
    <creationDate>(see K2 component)</creationDate>
    <copyright>Copyright (c) 2009 - 2023 JoomlaWorks Ltd. All rights reserved.</copyright>
    <authorEmail>please-use-the-contact-form@joomlaworks.net</authorEmail>
    <authorUrl>https://www.joomlaworks.net</authorUrl>
    <version>(see K2 component)</version>
    <license>https://gnu.org/licenses/gpl.html</license>
    <description>K2_STATS_FOR_USE_IN_THE_K2_DASHBOARD_PAGE</description>
    <files>
        <filename module="mod_k2_stats">mod_k2_stats.php</filename>
        <file>helper.php</file>
        <folder>tmpl</folder>
    </files>
    <params>
        <param name="latestItems" type="radio" default="1" label="K2_LATEST_ITEMS_TAB">
            <option value="0">K2_DISABLE</option>
            <option value="1">K2_ENABLE</option>
        </param>
        <param name="popularItems" type="radio" default="1" label="K2_POPULAR_ITEMS_TAB">
            <option value="0">K2_DISABLE</option>
            <option value="1">K2_ENABLE</option>
        </param>
        <param name="mostCommentedItems" type="radio" default="0" label="K2_MOST_COMMENTED_ITEMS_TAB">
            <option value="0">K2_DISABLE</option>
            <option value="1">K2_ENABLE</option>
        </param>
        <param name="latestComments" type="radio" default="1" label="K2_LATEST_COMMENTS_TAB">
            <option value="0">K2_DISABLE</option>
            <option value="1">K2_ENABLE</option>
        </param>
        <param name="statistics" type="radio" default="1" label="K2_STATISTICS_TAB">
            <option value="0">K2_DISABLE</option>
            <option value="1">K2_ENABLE</option>
        </param>
    </params>
    <params group="advanced">
        <param name="cache" type="list" default="0" label="K2_CACHING" description="K2_SELECT_WHETHER_TO_CACHE_THE_CONTENT_OF_THIS_MODULE">
            <option value="0">K2_NO_CACHING</option>
            <option value="1">K2_USE_GLOBAL</option>
        </param>
        <param name="cache_time" type="text" default="" label="K2_CACHE_TIME" description="K2_THE_TIME_IN_SECONDS_BEFORE_THE_MODULE_IS_RECACHED"/>
    </params>
</install>
